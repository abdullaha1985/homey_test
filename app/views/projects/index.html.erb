
  <div>
    <p id="notice"><%= notice %></p>
    <h1 class="text-xl- mb-2">Projects</h1> <br>

    <table class="w-full">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th>Name</th>
          <th>State</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each_with_index do |project, index| %>
          <tr class= <%= index.odd? ? 'bg-gray-50' : 'bg-white' %> >
            <td class='p-3 text-sm font-semibold text-gray-700'><%= project.name %></td>
            <td class='p-3 text-sm font-semibold text-gray-700'><%= project.status %></td>
            <td class='p-3 text-sm font-semibold text-gray-700'><%= link_to 'Show', project_path(project), class: 'btn bg-blue-200' %></td>
            <td class='p-3 text-sm font-semibold text-gray-700'><%= link_to 'Edit', edit_project_path(project), class: 'btn bg-gray-200' %></td>
            <td class='p-3 text-sm font-semibold text-gray-700'><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn bg-red-200' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Project', new_project_path, class: 'btn bg-blue-200' %>
  </div>  



